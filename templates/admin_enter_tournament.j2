{% extends 'base.j2' %}

  {% block content %}
		{{message}}
		<form action="{{ url_for('admin_enter_tournament_submitted') }}" method = "POST" class="left_align">		
			<h2>Copy and paste the  bracket link into the box below</h2>
			<h4>SmashGG format example: smash.gg/tournament/tony-town-3rd-strike-knuckles</h4>
			<h4>Challonge format example: epeengaming.challonge.com/oop0hkl8</h4>

			URL<br>
			<input type = "text" name = "bracket_url"/></br>

			Website<br>
			<select class="selectpicker" name="bracket_website">
  				<option>SmashGG</option>
  				<option>Challonge</option>
			</select>
			</br>
			<input type = "submit" value = "Submit" id="submit_button"/><br>
		</form>
	{% endblock %}