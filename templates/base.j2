<!DOCTYPE html>
<html>

	<head>
	  {% block head %}
		<title>Hart PR</title>
		<link rel="shortcut icon" href="/static/hartprredsmashfavicon.png">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/static/headertable.css??id={{timestamp}}">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
	  {% endblock %}
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-104140679-1', 'auto');
			ga('send', 'pageview');

		</script>
	</head>
 
	<body>

		<div class="header" id="grad"><a href="{{url_for('index')}}" id="logo"><img id="hartprlogo" src="/static/hartprlogo.png"></a></div>
			<nav class="navbar navbar-inverse navbar-static-top">
 			<div class="container-fluid" id="main">
    			<div class="navbar-header">
    				<a class="navbar-brand" href="{{url_for('index')}}">&#9825;PR</a>
  				</div>
 		    	<ul class="nav navbar-nav">
					<li {%- if request.path == url_for('index') %} id="active"{% endif %}><a href="{{url_for('index')}}">Ranking</a></li>
					<li {%- if request.path == url_for('tournaments') %} id="active"{% endif %}><a href="{{url_for('tournaments')}}">Tournaments</a></li>
					<li {%- if request.path == url_for('searchh2h') %} id="active"{% endif %}><a href="{{url_for('searchh2h')}}">Head2Head</a></li>
					<li {%- if request.path == url_for('submit_form_unsubmitted') %} id="active"{% endif %}><a href="{{url_for('submit_form_unsubmitted')}}">Request Changes</a></li>
					<li {%- if request.path == url_for('about') %} id="active"{% endif %}><a class="right_most" href="{{url_for('about')}}">About</a></li>
    			</ul>
				<form class="navbar-form" role="search" action="{{ url_for('search') }}">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for player..." name="Player" id="srch-term" list="player_names">
							<datalist id="player_names">
								{% for player in players %}
									<option value="{{player['display_name']}}"></option>
								{% endfor %}
							</datalist>
						<div class="input-group-btn">
					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						</div>
					</div>
				</form>
 			 </div>	
		</nav>
	  {% block content %}
	  {% endblock %}
	</body>
</html>