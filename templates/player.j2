<!DOCTYPE html>
<html>

	<head>
		<title>Hart PR</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/static/headertable.css??id={{timestamp}}">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
	</head>

	<body>
		<div class="header" id="grad"><span><a href="{{url_for('index')}}" id="logo">&#9825;PR</a></span></div>
			<nav class="navbar navbar-inverse navbar-static-top">
 			<div class="container-fluid" id="main">
    			<div class="navbar-header">
    				<a class="navbar-brand" href="{{url_for('index')}}">&#9825;PR</a>
  				</div>
 		    	<ul class="nav navbar-nav">
					<li id="active"><a href="{{url_for('index')}}">Ranking</a></li>
					<li><a href="{{url_for('tournaments')}}">Tournaments</a></li>
					<li><a href="{{url_for('searchh2h')}}">Head2Head</a></li>
					<li><a href="{{url_for('submit_form_unsubmitted')}}">Request Changes</a></li>
					<li><a class="right_most" href="{{url_for('about')}}">About</a></li>
    			</ul>
				<form class="navbar-form" role="search" action="{{ url_for('search') }}">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for player..." name="Player" id="srch-term" list="player_names">
							<datalist id="player_names">
								{% for player in players %}
									<option value="{{player[1]}}">
								{% endfor %}
							</datalist>
						<div class="input-group-btn">
					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						</div>
					</div>
				</form>
 			 </div>	
		</nav>

      <div class ="container">
      <div class="row-fluid">
         <div class="col-sm-4">
            
            <h2> {{display_name}} </h2>
            <h3> Trueskill: {{trueskill_thousand_test}} </h3>
            <h4> Unadjusted: {{mu}} (+/- {{3 * sigma}}) </h4>
            <div class="table-responsive">
               <table class="table table-bordered">
                  <thead>
                     <tr>
                        <th colspan="2">Lifetime Stats</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td>Sets Played</td>
                        <td>{{total_set_count}}</td>

                     </tr>
                     <tr>
                     	  <td>Sets Won</td>
                     	  <td>{{set_win_count}}</td>
                     </tr>

                     <tr>
                     	  <td>Set Win Percentage</td>
                     	  <td>{{set_win_percent}}</td>
                     </tr>

                     <tr>
                     	  <td>Games Played</td>
                     	  <td>{{total_game_count}}</td>
                     </tr>

                     <tr>
                     	  <td>Games Won</td>
                     	  <td>{{game_win_count}}</td>
                     </tr>

                     <tr>
                     	  <td>Game Win Percentage</td>
                     	  <td>{{game_win_percent}}</td>
                     </tr>

                     <tr>
                     	  <td>Tournaments Attended</td>
                     	  <td>{{tourney_attended_count}}</td>
                     </tr>


                  </tbody>
               </table>
            </div>
         </div>
         <div class="col-sm-8">
            <canvas id="myChart" width="1110" height="200"></canvas>
            <div class="table-responsive">
               <table class="table table-striped" style="width: 90%; margin: 7px auto 0 auto">
                  <thead>
                     <tr>
      				
      				<th>Opponent</th>
      				<th>Result</th>
      				<th>Score</th>
      				<th>Tournament</th>
      				<th style="width: 100px">Date</th>
                     </tr>
                  </thead>
                  <tbody>
      			   {% for set in sets %}
      			  <tr>
      				<td><a href="{{url_for('player', player_id=set[6])}}">{{set[1]}}</a></td>
      				<td>{{set[2]}}</td>
      				<td>{{set[4]}}</td>
      				<td><a href="{{url_for('tournamentPage', tournament_id=set[5])}}">{{set[0]}}</a></td>
      				<td>{{set[3][5:]+set[3][4]+set[3][:4]}}</td>
      			  </tr>
      			{% endfor %}
      			</tbody>
               </table>
            </div>
         </div>
      </div>
      </div>


      <script>
         var ctx = document.getElementById("myChart");
         var myChart = new Chart(ctx, {
             type: 'bar',
             data: {
                 labels: [
                 {% for skillTier in skillDistribution %}
                  "",
                 {% endfor %}
                 ],
                 datasets: [{
                  range: [
                     {% for skillTier in skillDistribution %}
                        "{{ skillTier["range"] }}",
                     {% endfor %}
                  ],
                     data: [
                     {% for skillTier in skillDistribution %}
                        {{ skillTier["numPeople"] }},
                     {% endfor %}
                     ],
                     backgroundColor: [
                     {% for skillTier in skillDistribution %}
                        '{{ skillTier["backgroundColor"] }}',
                     {% endfor %}
                     ],
                     borderColor: [
                     {% for skillTier in skillDistribution %}
                        '{{ skillTier["borderColor"] }}',
                     {% endfor %}
                     ],
                     borderWidth: 1
                 }]
             },
             options: {
               legend: {
                  display: false
               },
               title: {
                  fullWidth: false
               },
                 scales: {
                     yAxes: [{
                         ticks: {
                             beginAtZero:true,
                             fixedStepSize: 15
                         }
                     }]
                 },
                 tooltips: {
                  callbacks: {
                     title: function(items, data) {
                        return `Skill Rating: ${data.datasets[0].range[items[0].index]}`.replace("$", "âžŸ")
                     },
                     label: function (items, data) {
                        return `Count: ${data.datasets[0].data[items.index]}`
                     }
                  }
                 }
             }
         });
      </script>
   </body>
</html>

