{% extends 'base.j2' %}

  {% block content %}


		<div class ="container">
		<div class="row-fluid">
		<div class="col-lg-12">
		<h2> {{information["name"]}} </h2>
		<h3><a href="{{information['url']}}">{{information["url"]}}</a></h3>
		<h4> {{information["calendar_date"][5:]+information["calendar_date"][4]+information["calendar_date"][:4]}} </h4>


		<table class="table table-bordered" style="width: 20%;float: left;">
		<tr class="table_header">
			<th>Players</th>
		</tr>
		{% for player in players %}
			<tr>
			<td><a href="{{url_for('player', player_id=player[1])}}">{{player[0]}}</a></td>
			</tr>
		{% endfor %}
		</table>
		<table class="table table-striped" style="width: 70%;float: right">
		<tr class="table_header">
			<th>Winner</th>
			<th>Score</th>
			<th>Loser</th>
		</tr>
		{% for set in sets %}
			<tr>
				<td>
				<a href="{{url_for('player', player_id=set[0][1])}}">
				{{set[0][0]}}
				</a>
				</td>
				<td>{{set[2]}}</td>
				<td>
				<a href="{{url_for('player', player_id=set[1][1])}}">
				{{set[1][0]}}</a></td>
			</tr>
		{% endfor %}
		</table>
		</div>
		</div>
	{% endblock %}
